<h1>Eat da Burger!</h1>

<ul>
  {{#each burgers}}
    {{#unless eating}}
      {{> burgers/burger-block eating=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>burgers that are eating!</h2>

<ul>
  {{#each burgers}}
    {{#if eating}}
      {{> burgers/burger-block eating=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="eating">eating?</label><br>
    <input type="radio" name="eating" value="1" checked> Eating!<br>
    <input type="radio" name="eating" value="0"> 
  </div>

  <button type="submit">Add Burger</button>
</form>
