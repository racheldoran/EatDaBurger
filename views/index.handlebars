<h1>Eat-Da-Burger</h1>

<ul>
  {{#each burgers}}
    {{#unless eating}}
      {{> burgers/burger-block eating=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>LET'S EAT!</h2>

<ul>
  {{#each burgers}}
    {{#if eating}}
      {{> burgers/burger-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

 

  <button type="submit">Add Burger</button>
</form>
